// *************************************
//
//   Settings
//   -> Fonts, Variables
//
// *************************************

// -------------------------------------
//   @font-face
// -------------------------------------

@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap');
$font-fam = 'Roboto'
$font-head = 'Roboto'

// -------------------------------------
//   Variables
// -------------------------------------

// ----- Base Colors ----- //

$primary = #B7AD00
$black = #161619
$white = #FFFFFF

$base-background = $white
$base-color = $black
$base-link-color = $primary

// ----- Base Borders & Box Shadows ----- //

$base-border = 1px solid lighten($base-color, 70%)
$base-borderRadius = 3px
$base-boxShadow = 0 1px 2px rgba($base-color, 0.25)

// ----- Base Content ----- //

$base-fontFamily = $font-fam
$base-fontSize = 17px
$base-lineHeight = 1.6

// ----- Base Layout ----- //

$base-whitespace = 20px

// ----- Content ----- //

$bold-fontFamily = $font-fam
$c-header-fontFamily = $font-head

// ----- Breakpoint ----- //

$small = 400px
$phone = 680px
$medium = 800px
$desktop = 1080px
$big = 1280px